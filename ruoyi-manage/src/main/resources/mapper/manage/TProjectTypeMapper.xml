<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.manage.mapper.TProjectTypeMapper">
    
    <resultMap type="TProjectType" id="TProjectTypeResult">
        <result property="id"    column="id"    />
        <result property="sort"    column="sort"    />
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
        <result property="parentId"    column="parent_id"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="parentName" column="parent_name" />
    </resultMap>

    <sql id="selectTProjectTypeVo">
        select id, sort, code, name, parent_id, status, create_by, create_time, update_by, update_time, remark from t_project_type
    </sql>

    <select id="selectTProjectTypeList" parameterType="TProjectType" resultMap="TProjectTypeResult">
        <include refid="selectTProjectTypeVo"/>
        <where>  
            <if test="sort != null "> and sort = #{sort}</if>
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
        order by parent_id
    </select>
    
    <select id="selectTProjectTypeById" parameterType="Long" resultMap="TProjectTypeResult">
        select t.id, t.sort, t.code, t.name, t.parent_id, t.status, t.create_by, t.create_time, t.update_by, t.update_time, t.remark, p.name as parent_name
        from t_project_type t
        left join t_project_type p on p.id = t.parent_id
        where t.id = #{id}
    </select>
        
    <insert id="insertTProjectType" parameterType="TProjectType" useGeneratedKeys="true" keyProperty="id">
        insert into t_project_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sort != null">sort,</if>
            <if test="code != null and code != ''">code,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sort != null">#{sort},</if>
            <if test="code != null and code != ''">#{code},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateTProjectType" parameterType="TProjectType">
        update t_project_type
        <trim prefix="SET" suffixOverrides=",">
            <if test="sort != null">sort = #{sort},</if>
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTProjectTypeById" parameterType="Long">
        delete from t_project_type where id = #{id}
    </delete>

    <delete id="deleteTProjectTypeByIds" parameterType="String">
        delete from t_project_type where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>